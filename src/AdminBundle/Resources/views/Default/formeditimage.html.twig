{% include "AdminBundle:Default:menu.html.twig" %}
{% block contenu %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Gestion des Images <a class="btn btn-sm btn-primary" href='{{path('admin_image')}}'>
                    Retour
                </a>
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Edit Image</li>
            </ol>
        </section>


        <section class="content">
            <!-- Small boxes (Stat box) -->
            <div class="row">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                    </div>
                    <!-- /.box-header -->

                    <div class="box-body">
                        <div class="box-body">
                            <div class="modal-body">
                                <form id="add-form" enctype="multipart/form-data"  method='POST' action='{{path('valide_edit_image')}}' data-parsley-validate class="form-horizontal form-label-left">


                                    <!-- <div class="ln_solid"></div>-->
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="modal-name"> Bloc  <span class="required">*</span>
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <select name="bloc" required="required" class="form-control col-md-7 col-xs-12">
                                                <option value="{{ blocselect.id }}">{{ blocselect.description }}</option>
                                                {% for bloc in blocs %}
                                                    <option value="{{ bloc.id }}">{{ bloc.description }}</option>
                                                {% endfor %}
                                            </select>
                                            <input type="hidden" value="{{ image.id }}"  name="idimage" required="required" class="form-control col-md-7 col-xs-12">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="modal-name"> Description  <span class="required">*</span>
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">

                                            <textarea name="description" required="required" class="form-control col-md-7 col-xs-12">{{image.description}}</textarea>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="modal-name"> Image  <span class="required">*</span>
                                        </label>
                                        <div class="col-md-8 col-sm-8 col-xs-12">
                                            <input type="file"  name="image"  class="form-control col-md-7 col-xs-12">
                                            <img style='height:100px;border:solid 1px;padding:10px;margin:5px' src="{{asset('uploads/')}}{{image.image}}" />
                                        </div>
                                    </div>

                                    <div class="modal-footer">

                                        <button type="submit" class="btn btn-success btn-add"><i class="fa fa-plus"></i>   Valider  </button>
                                    </div>
                                </form>

                            </div>

                        </div> 
                    </div>

                    <!-- /.box-body -->
                </div>


                <!-- ./col -->
            </div>
            <!-- /.row -->

            <!-- /.row (main row) -->

        </section>

    </div>
{% endblock %}

{% include "AdminBundle:Default:footer.html.twig" %}