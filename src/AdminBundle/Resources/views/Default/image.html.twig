{% include "AdminBundle:Default:menu.html.twig" %}
{% block contenu %}
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                Gestion des Images 
                {% if valideadd is defined %} <span style='color:red'><b>L'image est bien ajouté.</b></span>  {% endif %}
                {% if valideedit is defined %} <span style='color:red'><b>L'image est bien Modifié.</b></span>  {% endif %}
                {% if validesupp is defined %} <span style='color:red'><b>L'image est bien supprimé.</b></span>  {% endif %}

                <a class="btn btn-sm btn-success" href='{{path('add_image')}}'>
                    <i class="fa fa-plus"></i>
                </a>
                <small></small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li class="active">Gestion des Images</li>
            </ol>
        </section>


        <section class="content">
            <!-- Small boxes (Stat box) -->
            <div class="row">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                    </div>
                    <!-- /.box-header -->

                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr id=''>
                                    <th>Num</th>
                                    <th>Bloc</th>
                                    <th>Image</th>
                                    <th>Description</th>
                                    <th>Actions</th>

                                </tr>
                            </thead>
                            <tbody>
                                {% set i=0 %}
                                {% for image in images %}
                                    {% set i=i+1%}

                                    <tr id="tr_{{image.id}}_{{ i }}">
                                        <td>{{ i }}</td>
                                        <td id="bloc_{{image.id}}_1">{{ image.descbloc }}</td>

                                        <td id="image_{{image.id}}_1"><img src="{{asset('uploads/')}}{{ image.image }}" height="100px" /></td>
                                        <td id="description_{{image.id}}_1">{{ image.descimage }}</td>
                                        <td>
                                            <a id="image_{{image.id}}" href='{{path('edit_image', { 'id': image.id })}}' class="btn btn-info btn-xs btn-edit"><i class="fa fa-pencil"></i></a> 
                                            <a href="{{path('delete_image', { 'id': image.id })}}" id="{{image.id}}_{{ i }}" class="btn btn-danger btn-xs btn-delete" onclick="return confirm('Etes vous sur de vouloir supprimer cette Image ?');"><i class="fa fa-trash-o"></i></a>
                                        </td>

                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot>
                                <tr id=''>
                                    <th>Num</th>
                                    <th>Bloc</th>
                                    <th>Image</th>
                                    <th>Description</th>
                                    <th>Actions</th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- /.box-body -->
                </div>


                <!-- ./col -->
            </div>
            <!-- /.row -->

            <!-- /.row (main row) -->

        </section>

    </div>
{% endblock %}

{% include "AdminBundle:Default:footer.html.twig" %}